create or replace procedure insert_emp(
    p_empno in number,
    p_name in varchar2
) is
begin
    insert into emp (empno, name)
    values (p_empno, p_name);
end;
/



begin
    insert_emp(1, 'John');
    insert_emp(2, 'Jane');
    insert_emp(3, 'Doe');
end;
/

