create or replace procedure delete_emp(
    p_empno in number  
) is
begin
   delete from emp
where empno =p_empno;
end;





begin
    delete_emp(2);
if sql%found then
dbms_output.put_line('data is deleted');
else
dbms_output.put_line('data not found');
end if;
  
end;



===========================================================update======================


create or replace procedure update_emp(
    p_empno in number  
) is
begin
   update emp
set name ='vaibhav'
where empno=p_empno;
end;


begin
    update_emp(1);
if sql%found then
dbms_output.put_line('data is updated');
else
dbms_output.put_line('data not found');
end if;
  
end;



